<p id="notice"><%= notice %></p>

<h1>Список департаментів</h1>

<table>
  <thead>
    <tr>
      <th>Назва департаменту</th>
      <th>Активних працівників, %</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class= "table">
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
         <td> <%= department.percent_complete %> </td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department)  %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Додати новий департамент', new_department_path, class: 'btn btn-primary' %>
